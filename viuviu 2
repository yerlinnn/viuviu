#include <sys/types.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <stdio.h>
#include <errno.h>
#include <stdlib.h>

int main() {
    int *array;  /* Указатель на разделяемую память */
    int shmid;   /* IPC дескриптор для области разделяемой памяти */
    char pathname[] = "prog1.c";  /* Имя файла, использующееся для генерации ключа */

    key_t key;   /* IPC ключ */
    if ((key = ftok(pathname, 0)) < 0) {
        printf("Can't generate key\n");
        exit(-1);
    }

    /* Пытаемся получить доступ к существующей разделяемой памяти для сгенерированного ключа */
    if ((shmid = shmget(key, 3 * sizeof(int), 0)) < 0) {
        printf("Can't find shared memory\n");
        exit(-1);
    }

    /* Пытаемся отобразить разделяемую память в адресное пространство текущего процесса */
    if ((array = (int *)shmat(shmid, NULL, 0)) == (int *)(-1)) {
        printf("Can't attach shared memory\n");
        exit(-1);
    }

    /* Увеличиваем счетчик программы 2 и общий счетчик */
    array[1] += 1;
    array[2] += 1;

    /* Печатаем новые значения счетчиков, отсоединяем разделяемую память и завершаем работу */
    printf("Program 1 was spawn %d times, program 2 - %d times, total - %d times\n", array[0], array[1], array[2]);

    if (shmdt(array) < 0) {
        printf("Can't detach shared memory\n");
        exit(-1);
    }

    return 0;
}
